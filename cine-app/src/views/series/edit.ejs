<%- include('../layout') %>
<h1>Editar Serie</h1>
<form action="/series/<%= series.id %>" method="POST">
    <div class="form-group">
        <label for="name">Nombre de la Serie</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= series.name %>" required>
    </div>
    <div class="form-group">
        <label for="image">Imagen de Portada</label>
        <input type="text" class="form-control" id="image" name="image" value="<%= series.image %>" required>
    </div>
    <div class="form-group">
        <label for="video">Enlace del Video de YouTube</label>
        <input type="text" class="form-control" id="video" name="video" value="<%= series.video %>" required>
    </div>
    <div class="form-group">
        <label for="genre">GÃ©nero</label>
        <select class="form-control" id="genre" name="genre" required>
            <% genres.forEach(genre => { %>
                <option value="<%= genre.name %>" <%= genre.name === series.genre ? 'selected' : '' %>><%= genre.name %></option>
            <% }); %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/series" class="btn btn-secondary">Volver</a>
</form>
