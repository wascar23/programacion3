<%- include('../layout') %>
<h1>Crear Serie</h1>
<form action="/series" method="POST">
    <div class="form-group">
        <label for="name">Nombre de la Serie</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="form-group">
        <label for="image">Imagen de Portada</label>
        <input type="text" class="form-control" id="image" name="image" required>
    </div>
    <div class="form-group">
        <label for="video">Enlace del Video de YouTube</label>
        <input type="text" class="form-control" id="video" name="video" required>
    </div>
    <div class="form-group">
        <label for="genre">GÃ©nero</label>
        <select class="form-control" id="genre" name="genre" required>
            <% genres.forEach(genre => { %>
                <option value="<%= genre.name %>"><%= genre.name %></option>
            <% }); %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a href="/series" class="btn btn-secondary">Volver</a>
</form>
